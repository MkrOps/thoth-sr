{
  "name": "@thoth/root",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "core",
      "server"
    ]
  },
  "scripts": {
    "start:core": "lerna exec --scope @latitudegames/thoth-core -- yarn start",
    "start:client": "lerna exec --scope @latitudegames/thoth-client -- yarn start",
    "start:agent-runner": "lerna exec --scope @latitudegames/thoth-server -- yarn run agent-runner",
    "start": "concurrently \"yarn start:core\" \"sleep 10s && yarn start:client\"",
    "dev": "concurrently \"cd server && docker-compose up\" \"sleep 5s && yarn run dev:server\" \"yarn start:core\" \"sleep 1s && yarn start:client\" \"sleep 1s && yarn start:agent-runner\" \"sleep 5s && yarn run db:seed\" ",
    "dev:server": "lerna exec --scope @latitudegames/thoth-server -- yarn run dev",
    "db:seed": "npx sequelize-cli db:seed:all --url 'postgres://thoth:thoth_default_pw@localhost:5432/thoth'",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "build": "lerna exec --scope @latitudegames/thoth-client -- yarn build",
    "install:core": "lerna exec --scope @latitudegames/thoth-core -- yarn install",
    "build:core": "lerna exec --scope @latitudegames/thoth-core -- yarn build",
    "publish:canary": "lerna exec --scope @latitudegames/thoth-core -- yarn canary",
    "install:canary": "lerna exec --scope @latitudegames/thoth-client -- yarn install:canary"
  },
  "engines": {
    "node": ">=14.17.6",
    "npm": ">=6.12.0",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "concurrently": "^6.2.1",
    "craco": "^0.0.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1"
  },
  "dependencies": {
    "@google-cloud/speech": "^4.10.0",
    "@google-cloud/text-to-speech": "^3.4.0",
    "compromise": "^13.11.4",
    "compromise-sentences": "^0.3.0",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1"
  }
}
