{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3001",
      "sourceMap": true,
      "webRoot": "${workspaceFolder}/client",
      //   "trace": true,

      // These overrides are mapping the location of the file in the browser (from webpack) to the local file
      "sourceMapPathOverrides": {
        "webpack://thothCore/./*": "${workspaceFolder}/core/*",
        "webpack-internal:///../core/dist": "${workspaceFolder}/core/*",
        "webpack-internal:///./": "${workspaceFolder}/client/*",
        "webpack://@thoth/client/./*": "${workspaceFolder}/client/*"
      }
    }
  ]
}

